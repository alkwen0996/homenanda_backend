<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.home.nanda.user.model.mapper.FavoriteMapper">

    <resultMap type="FavoriteArea" id="FavoriteAreaMap">
        <result column="user_id" property="userId"/>
        <result column="favorite_area_code" property="favoriteAreaCode"/>
        <result column="area_code" property="areaCode"/>
    </resultMap>

    <resultMap type="FavoriteHouse" id="FavoriteHouseMap">
        <result column="user_id" property="userId"/>
        <result column="house_favorite_no" property="favoriteHouseCode"/>
        <result column="house_code" property="houseCode"/>
    </resultMap>

    <select id="findFavoriteAreas" parameterType="String" resultMap="FavoriteAreaMap">
        select user_id, favorite_area_code, area_code
        from area_favorite
        where user_id = #{userId}
    </select>

    <insert id="registerFavoriteArea" parameterType="FavoriteArea">
        insert into area_favorite values (#{favoriteAreaCode}, #{userId}, #{areaCode})
    </insert>

    <delete id="deleteFavoriteArea" parameterType="String">
        delete from area_favorite
        where favorite_area_code = #{favoriteAreaCode}
    </delete>

    <select id="findFavoriteHouses" parameterType="String" resultMap="FavoriteHouseMap">
        select user_id, house_favorite_no, house_code
        from house_favorite
        where user_id = #{userId}
    </select>

    <insert id="registerFavoriteHouses" parameterType="FavoriteHouse">
        insert into house_favorite values (#{userId}, #{favoriteHouseCode}, #{houseCode})
    </insert>

</mapper>
