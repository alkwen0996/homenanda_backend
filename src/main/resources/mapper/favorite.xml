<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.home.nanda.user.model.mapper.FavoriteMapper">

    <resultMap type="FavoriteArea" id="FavoriteAreaMap">
        <result column="user_id" property="userId"/>
        <result column="area_favorite_code" property="areaFavoriteCode"/>
        <result column="area_code" property="areaCode"/>
    </resultMap>

    <select id="findFavoriteAreas" resultMap="FavoriteAreaMap">
        select user_id, area_favorite_code, area_code
        from area_favorite
    </select>

    <insert id="registerFavoriteArea" parameterType="FavoriteArea">
        insert into area_favorite values (#{areaFavoriteCode}, #{userId}, #{areaCode})
    </insert>

    <delete id="deleteFavoriteArea" parameterType="String">
        delete from area_favorite
        where area_favorite_code = #{areaFavoriteCode}
    </delete>

</mapper>
